@model SignalrPractice.Models.UserModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
@{var imgUrl = Url.Content("~/Content/images/profile/" + Html.DisplayFor(model => model.userName) + ".png") + "?time=" + DateTime.Now.ToString();
}
<img src="@imgUrl" height="50" width="50" class="img-circle" />
<div>
    <h4>Applicant</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.userName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.displayName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        </dl>
</div>